<mvc:View controllerName="sap.ui.demo.walkthrough.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
>
    <!-- <Button class="sapUiSmallMarginEnd" text="{i18n>showHelloButtonText}"
    press=".onShowHello"/> -->

    <Shell
        appWidthLimited="true"
        backgroundColor=""
        backgroundImage=""
        backgroundOpacity="1"
        backgroundRepeat="false"
        headerRightText=""
        homeIcon=""
        logo=""
        showLogout="true"
        title=""
        titleLevel="H1"
    >
        <App class="myAppDemo">
            <pages>
                <Page title="{i18n>homePageTitle}">
                    <content>
                        <Panel
                            class="sapUiResponsiveMargin"
                            accessibleRole="Form"
                            backgroundDesign="Translucent"
                            expandAnimation="true"
                            expandable="false"
                            expanded="false"
                            headerText="{i18n>helloPanelTitle}"
                            height="auto"
                            width="100%">
                            <content>
                                <Button text="{i18n>showHelloButtonText}"
                                    press=".onShowHello"
                                    class="myCustomBtn" />
                                <Input value="{/recipient/name}"
                                    description="Hello {/recipient/name }"
                                    valueLiveUpdate="true"
                                    width="60%" />
                                <FormattedText
                                    htmlText="Hello {/recipient/name}"
                                    class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText" />
                            </content>
                            <headerToolbar>
                            </headerToolbar>
                            <infoToolbar>
                            </infoToolbar>
                        </Panel>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>